<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgn_dashboard"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Selamat Datang,"
                android:textColor="#FFFFFF"
                android:textSize="26dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/idTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFFFFF"
                android:text="User 24"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCARDuser"
            android:backgroundTint="#EAE5E5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="73dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/IVgambar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Menu Akun Anda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/idCARDuser2"
                android:backgroundTint="#EAE5E5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="22dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center"
                        android:id="@+id/IVgambar2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTVResultnm"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="User 24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/idTVResultus"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:text="User 24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/idBTNedit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:textColor="#939393"
                android:textSize="12dp"
                android:text="Edit Akun >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:elevation="20dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_emoji_events_24_a"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/idTVJmlEV"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="-"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:text="Jumlah Event Anda"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_text_snippet_24_a"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/idTVJmlST"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="-"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Jumlah Sertifikat Anda"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BTNNav"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/costum_buttom_nav"
        app:itemTextColor="@drawable/selector_icon_user"
        app:itemIconTint="@drawable/selector_icon_user"
        android:elevation="20dp"
        app:itemIconSize="28dp"
        app:itemPaddingBottom="3dp"
        app:itemRippleColor="#0CD0E8"
        app:menu="@menu/buttom_user_menu_dashboard" />
    </LinearLayout>


</LinearLayout>