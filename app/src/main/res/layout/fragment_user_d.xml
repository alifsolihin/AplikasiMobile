<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bgn_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragmentD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Selamat Datang,"
                android:textColor="#FFFFFF"
                android:textSize="26dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/idTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFFFFF"
                android:text="User 24"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCARDuser"
            android:backgroundTint="#EAE5E5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="73dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Menu Akun Anda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/idCARDuser2"
                android:backgroundTint="#EAE5E5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="22dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="User 24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:textColor="#939393"
                android:textSize="12dp"
                android:text="Edit Akun >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:elevation="20dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="260dp"
            android:layout_height="210dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_emoji_events_24_a"
                    android:drawablePadding="10dp"
                    android:text="20 event telah diikuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_text_snippet_24_a"
                    android:drawablePadding="10dp"
                    android:text="12 sertifikat telah tersedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_group_24"
                    android:drawablePadding="10dp"
                    android:text="234 orang mengikuti anda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_payments_24_a"
                    android:drawablePadding="10dp"
                    android:text="250000 sisa saldo anda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_baseline_save_24_a"
                    android:drawablePadding="10dp"
                    android:text="30 event yang disimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
</LinearLayout>