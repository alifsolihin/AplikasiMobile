<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bluegradient2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SertifikatResult">

    <ImageView
        android:layout_marginTop="170dp"
        android:id="@+id/IVgambar"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="190dp">

       <androidx.cardview.widget.CardView
           app:cardCornerRadius="40dp"
           app:cardElevation="30dp"
           android:layout_gravity="center"
           android:layout_width="320dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="100dp">

               <LinearLayout
                   android:layout_gravity="center_horizontal"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

           <TextView
               android:id="@+id/idTVResult1"
               android:layout_marginTop="15dp"
               android:gravity="center_horizontal"
               android:text="-"
               android:textSize="17dp"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
               </LinearLayout>



               <Button
                   android:id="@+id/idBTNUnduh"
                   android:text="Download"
                   android:textStyle="bold"
                   android:textSize="12dp"
                   android:gravity="center"
                   android:backgroundTint="@color/blue"
                   android:drawableRight="@drawable/ic_baseline_cloud_download_24"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="180dp"
                   android:layout_height="wrap_content"/>


           </LinearLayout>


       </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>